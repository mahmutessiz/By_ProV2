<Window x:Class="By_ProV2.AlisReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SÜT ALIŞ İCMALİ"
        Height="800" Width="800"
        WindowStartupLocation="CenterScreen"
        Icon="/Resources/Logo.png"
        Background="White">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
                <Button x:Name="btnPreviewPDF" Content="PDF Önizleme" 
                        Click="BtnPreviewPDF_Click"
                        Padding="10,5" Margin="0,0,10,0" 
                        Background="LightBlue" FontWeight="Bold"/>
                <Button x:Name="btnExportToPDF" Content="PDF Olarak Dışa Aktar" 
                        Click="BtnExportToPDF_Click"
                        Padding="10,5" Margin="0,0,10,0" 
                        Background="LightBlue" FontWeight="Bold"/>
            </StackPanel>

        <!-- Başlık -->
        <StackPanel HorizontalAlignment="Center" Margin="0,0,0,20">
            <TextBlock Text="SÜT ALIŞ İCMALİ"
                       FontSize="20"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
            <TextBlock x:Name="lblDateRange" 
                       Text="" 
                       FontSize="14" 
                       HorizontalAlignment="Center" 
                       Margin="0,5,0,15"/>
        </StackPanel>

        <!-- Cari ve Ödeme Detayları -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Cari Bilgileri -->
            <GroupBox Header="Cari Bilgileri" Grid.Column="0" Margin="0,0,10,20" FontWeight="Bold">
                <StackPanel Margin="10">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="Cari Kodu:" FontWeight="Bold" Width="100" VerticalAlignment="Center"/>
                        <TextBlock x:Name="txtCariKod" FontSize="14" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="Cari Adı:" FontWeight="Bold" Width="100" VerticalAlignment="Center"/>
                        <TextBlock x:Name="txtCariAdi" FontSize="14" VerticalAlignment="Center" TextWrapping="Wrap" MaxWidth="200"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="Süt Fiyatı:" FontWeight="Bold" Width="100" VerticalAlignment="Center"/>
                        <TextBox x:Name="txtSutFiyati" FontSize="14" VerticalAlignment="Center" Width="100" HorizontalAlignment="Left" TextAlignment="Right" Padding="5" LostFocus="TxtSutFiyati_LostFocus" PreviewTextInput="TxtSutFiyati_PreviewTextInput" DataObject.Pasting="TxtSutFiyati_Pasting"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Nakliye Fiyatı:" FontWeight="Bold" Width="100" VerticalAlignment="Center"/>
                        <TextBlock x:Name="txtNakliyeFiyati" FontSize="14" VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- Ödeme Detayları -->
            <GroupBox Header="Ödeme Detayları" Grid.Column="1" Margin="10,0,0,20" FontWeight="Bold">
                <StackPanel Margin="10">
                    <StackPanel Orientation="Horizontal" Margin="10,0,0,10">
                        <TextBlock Text="Yağ Kesinti Tutarı:" FontWeight="Bold" VerticalAlignment="Center" Width="140"/>
                        <TextBlock x:Name="txtYagKesintiTutari" FontSize="14" VerticalAlignment="Center" TextAlignment="Right" MinWidth="50"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10,0,0,10">
                        <TextBlock Text="Protein Kesinti Tutarı:" FontWeight="Bold" VerticalAlignment="Center" Width="140"/>
                        <TextBlock x:Name="txtProteinKesintiTutari" FontSize="14" VerticalAlignment="Center" TextAlignment="Right" MinWidth="50"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10,10,0,5">
                        <TextBlock Text="Net Süt Ödemesi" FontWeight="Medium" FontSize="14"
                                   VerticalAlignment="Center"/>
                        <TextBlock x:Name="txtNetSutOdemesi" FontWeight="Bold" FontSize="14"
                                   VerticalAlignment="Center" Margin="10,0,0,0"/>
                    </StackPanel>
                    
                    <CheckBox x:Name="chkYagKesintisi" Content="Yağ kesintisi yap" 
                              VerticalAlignment="Center" HorizontalAlignment="Left" 
                              Margin="10,10,0,5" FontSize="14"
                              FontWeight="Medium"
                              Click="ChkYagKesintisi_Click"/>
                    
                    <CheckBox x:Name="chkProteinKesintisi" Content="Protein kesintisi yap" 
                              VerticalAlignment="Center" HorizontalAlignment="Left" 
                              Margin="10,0,0,5" FontSize="14"
                              FontWeight="Medium"
                              Click="ChkProteinKesintisi_Click"/>
                </StackPanel>
            </GroupBox>
        </Grid>

        <!-- Başlık Satırı -->
        <Grid Margin="0,0,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Tarih" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5"/>
            <TextBlock Grid.Column="1" Text="Miktar" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5"/>
            <TextBlock Grid.Column="2" Text="Kesinti" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5"/>
            <TextBlock Grid.Column="3" Text="Yağ (%)" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5"/>
            <TextBlock Grid.Column="4" Text="Protein (%)" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5"/>
        </Grid>

        <!-- Süt Kayıtları -->
        <StackPanel x:Name="spAlislar" Margin="0,0,0,20"/>
        <Border BorderBrush="Black" BorderThickness="0.1"></Border>
        
        <!-- Özet Bilgiler -->
        <Grid Margin="0,10,0,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="105"/>
                    <ColumnDefinition Width="90"/>
                <ColumnDefinition Width="90"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Labels Row -->
            <TextBlock Grid.Row="0" Grid.Column="1" Text="Net Miktar" FontWeight="Bold" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="2"/>
            <TextBlock Grid.Row="0" Grid.Column="2" Text="Kesinti" FontWeight="Bold" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="2"/>
            <TextBlock Grid.Row="0" Grid.Column="3" Text="Ort. Yağ" FontWeight="Bold" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="2"/>
            <TextBlock Grid.Row="0" Grid.Column="4" Text="Ort. Protein" FontWeight="Bold" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="2"/>
            
            <!-- Values Row -->
            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="lblNetMiktar" Text="0" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Top" Padding="2"/>
            <TextBlock Grid.Row="1" Grid.Column="2" x:Name="lblToplamKesinti" Text="0" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Top" Padding="2"/>
            <TextBlock Grid.Row="1" Grid.Column="3" x:Name="lblOrtalamaYag" Text="0" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Top" Padding="2"/>
            <TextBlock Grid.Row="1" Grid.Column="4" x:Name="lblOrtalamaProtein" Text="0" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Top" Padding="2"/>
        </Grid>

        <!-- Kesinti Parametreleri -->
        <GroupBox Header="Kesinti Parametreleri" Margin="0,10,0,20" FontWeight="Bold" Opacity="0">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="10,0,0,10">
                    <TextBlock Text="Yağ Kesinti:" FontWeight="Bold" VerticalAlignment="Center" Width="100"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="txtYagKesintiOrani" FontSize="14" VerticalAlignment="Center" TextAlignment="Right" MinWidth="30"/>
                        <TextBlock Text="%" VerticalAlignment="Center" Margin="2,0,0,0" FontSize="12"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10,0,0,10">
                    <TextBlock Text="Protein Kesinti:" FontWeight="Bold" VerticalAlignment="Center" Width="100"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="txtProteinKesintiOrani" FontSize="14" VerticalAlignment="Center" TextAlignment="Right" MinWidth="30"/>
                        <TextBlock Text="%" VerticalAlignment="Center" Margin="2,0,0,0" FontSize="12"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="2" x:Name="spDizemBasiTl" Orientation="Horizontal" Margin="10,0,0,10">
                    <TextBlock Text="Dizem Başına:" FontWeight="Bold" VerticalAlignment="Center" Width="100"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="txtDizemBasiTl" FontSize="14" VerticalAlignment="Center" TextAlignment="Right" MinWidth="30"/>
                        <TextBlock Text="TL" VerticalAlignment="Center" Margin="2,0,0,0" FontSize="12"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </GroupBox>
    </StackPanel>
    </ScrollViewer>
</Window>