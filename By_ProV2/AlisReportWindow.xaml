<Window x:Class="By_ProV2.AlisReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ALIŞ İCMAL RAPORU"
        Height="800" Width="800"
        WindowStartupLocation="CenterScreen"
        Icon="/Resources/Logo.png"
        Background="White">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
                <Button x:Name="btnPreviewPDF" Content="PDF Önizleme" 
                        Click="BtnPreviewPDF_Click"
                        Padding="10,5" Margin="0,0,10,0" 
                        Background="LightBlue" FontWeight="Bold"/>
                <Button x:Name="btnExportToPDF" Content="PDF Olarak Dışa Aktar" 
                        Click="BtnExportToPDF_Click"
                        Padding="10,5" Margin="0,0,10,0" 
                        Background="LightBlue" FontWeight="Bold"/>
            </StackPanel>

        <!-- Başlık -->
        <StackPanel HorizontalAlignment="Center" Margin="0,0,0,20">
            <TextBlock Text="ALIŞ İCMAL RAPORU"
                       FontSize="20"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
            <TextBlock x:Name="lblDateRange" 
                       Text="" 
                       FontSize="14" 
                       HorizontalAlignment="Center" 
                       Margin="0,5,0,15"/>
        </StackPanel>

        <!-- Cari Bilgileri -->
        <StackPanel Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Cari Kodu:" FontWeight="Bold" Width="100" VerticalAlignment="Center" Margin="25,0,0,0"/>
                <TextBlock x:Name="txtCariKod" FontSize="14" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Cari Adı:" FontWeight="Bold" Width="100" VerticalAlignment="Center"  Margin="25,0,0,0"/>
                <TextBlock x:Name="txtCariAdi" FontSize="14" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                <TextBlock Text="Süt Fiyatı:" FontWeight="Bold" Width="100" VerticalAlignment="Center" Margin="25,0,0,0"/>
                <TextBlock x:Name="txtSutFiyati" FontSize="14" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Nakliye Fiyatı:" FontWeight="Bold" Width="100" VerticalAlignment="Center"  Margin="25,0,0,0"/>
                <TextBlock x:Name="txtNakliyeFiyati" FontSize="14" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                <TextBlock Text="Yağ Kesinti Oranı:" FontWeight="Bold" Width="100" VerticalAlignment="Center" Margin="25,0,0,0"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="txtYagKesintiOrani" FontSize="14" VerticalAlignment="Center"/>
                    <TextBlock Text="%" VerticalAlignment="Center" Margin="5,0,0,0" FontSize="12"/>
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                <TextBlock Text="Protein Kesinti Oranı:" FontWeight="Bold" Width="100" VerticalAlignment="Center"  Margin="25,0,0,0"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="txtProteinKesintiOrani" FontSize="14" VerticalAlignment="Center"/>
                    <TextBlock Text="%" VerticalAlignment="Center" Margin="5,0,0,0" FontSize="12"/>
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                <TextBlock Text="Dizem Başına TL:" FontWeight="Bold" Width="100" VerticalAlignment="Center"  Margin="25,0,0,0"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="txtDizemBasiTl" FontSize="14" VerticalAlignment="Center"/>
                    <TextBlock Text="TL" VerticalAlignment="Center" Margin="5,0,0,0" FontSize="12"/>
                </StackPanel>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" Margin="25,10,0,5">
                <TextBlock Text="Net Süt Ödemesi" FontWeight="Bold" FontSize="14"
                           VerticalAlignment="Center"/>
                <TextBlock x:Name="txtNetSutOdemesi" FontWeight="Bold" FontSize="14"
                           VerticalAlignment="Center" Margin="10,0,0,0"/>
            </StackPanel>
            
            <CheckBox x:Name="chkYagKesintisi" Content="Yağ kesintisi yapmak istiyor musunuz?" 
                      VerticalAlignment="Center" HorizontalAlignment="Left" 
                      Margin="25,0,0,5" FontSize="14" 
                      Click="ChkYagKesintisi_Click"/>

            
            <CheckBox x:Name="chkProteinKesintisi" Content="Protein kesintisi yapmak istiyor musunuz?" 
                      VerticalAlignment="Center" HorizontalAlignment="Left" 
                      Margin="25,0,0,5" FontSize="14" 
                      Click="ChkProteinKesintisi_Click"/>

            

        </StackPanel>

        <!-- Başlık Satırı -->
        <Grid Margin="0,0,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Tarih" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5"/>
            <TextBlock Grid.Column="1" Text="Miktar" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5"/>
            <TextBlock Grid.Column="2" Text="Kesinti" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5"/>
            <TextBlock Grid.Column="3" Text="Yağ (%)" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5"/>
            <TextBlock Grid.Column="4" Text="Protein (%)" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5"/>
        </Grid>

        <!-- Süt Kayıtları -->
        <StackPanel x:Name="spAlislar" Margin="0,0,0,20"/>
            <Border BorderBrush="Black" BorderThickness="0.1"></Border>
        <!-- Özet Bilgiler -->
        <Grid Margin="0,10,0,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>
            
            <!-- Labels Row -->
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Net Miktar" FontWeight="Bold" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="2"/>
            <TextBlock Grid.Row="0" Grid.Column="1" Text="Kesinti" FontWeight="Bold" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="2"/>
            <TextBlock Grid.Row="0" Grid.Column="2" Text="Ort. Yağ" FontWeight="Bold" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="2"/>
            <TextBlock Grid.Row="0" Grid.Column="3" Text="Ort. Protein" FontWeight="Bold" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="2"/>
            <TextBlock Grid.Row="0" Grid.Column="4" Text="Toplam Kayıt" FontWeight="Bold" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="2"/>
            
            <!-- Values Row -->
            <TextBlock Grid.Row="1" Grid.Column="0" x:Name="lblNetMiktar" Text="0" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Top" Padding="2"/>
            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="lblToplamKesinti" Text="0" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Top" Padding="2"/>
            <TextBlock Grid.Row="1" Grid.Column="2" x:Name="lblOrtalamaYag" Text="0" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Top" Padding="2"/>
            <TextBlock Grid.Row="1" Grid.Column="3" x:Name="lblOrtalamaProtein" Text="0" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Top" Padding="2"/>
            <TextBlock Grid.Row="1" Grid.Column="4" x:Name="lblToplamKayit" Text="0" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Top" Padding="2"/>
        </Grid>
    </StackPanel>
    </ScrollViewer>
</Window>