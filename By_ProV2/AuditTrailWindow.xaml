<Window x:Class="By_ProV2.AuditTrailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kullanıcı İşlem Geçmişi" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Filters -->
        <GroupBox Header="Filtreler" Grid.Row="0" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" Margin="5">
                <Label Content="Tarih Aralığı:" VerticalAlignment="Center"/>
                <DatePicker x:Name="dpStartDate" Width="120" Margin="5,0" SelectedDate="{Binding Path=StartDate, Mode=TwoWay}"/>
                <Label Content="ile" VerticalAlignment="Center"/>
                <DatePicker x:Name="dpEndDate" Width="120" Margin="5,0" SelectedDate="{Binding Path=EndDate, Mode=TwoWay}"/>
                
                <Button x:Name="btnFilter" Content="Filtrele" Width="80" Margin="10,0,5,0" Click="BtnFilter_Click"/>
                <Button x:Name="btnReset" Content="Temizle" Width="80" Margin="5,0" Click="BtnReset_Click"/>
                
                <CheckBox x:Name="chkShowAll" Content="Tüm Kayıtları Göster (Eski Veriler Dahil)" 
                          Margin="20,0,0,0" VerticalAlignment="Center" IsChecked="False"/>
            </StackPanel>
        </GroupBox>
        
        <!-- Statistics and Actions -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock x:Name="txtStats" Text="" VerticalAlignment="Center" FontWeight="SemiBold"/>
            <Button x:Name="btnRefresh" Content="Yenile" Width="80" Margin="20,0,0,0" Click="BtnRefresh_Click"/>
        </StackPanel>
        
        <!-- Data Grid -->
        <DataGrid x:Name="dgAuditTrail" Grid.Row="2" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding RecordId}" Width="60"/>
                <DataGridTextColumn Header="Tablo" Binding="{Binding TableName}" Width="80"/>
                <DataGridTextColumn Header="İşlem" Binding="{Binding Operation}" Width="80"/>
                <DataGridTextColumn Header="Kullanıcı Adı" Binding="{Binding Username}" Width="100"/>
                <DataGridTextColumn Header="Ad Soyad" Binding="{Binding FullName}" Width="120"/>
                <DataGridTextColumn Header="Kayıt Açıklaması" Binding="{Binding RecordDescription}" Width="*"/>
                <DataGridTextColumn Header="Tarih" Binding="{Binding Timestamp, StringFormat='dd.MM.yyyy HH:mm:ss'}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>