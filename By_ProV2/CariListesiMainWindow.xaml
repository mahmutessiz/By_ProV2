        </DataGrid>

        <!-- Alt Bilgi -->
        <Border Grid.Row="3" Background="#E3F2FD" BorderBrush="#BBDEFB" 
                BorderThickness="1" CornerRadius="4" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" x:Name="lblToplamKayit" 
                          Text="Toplam: 0 KayÄ±t" 
                          VerticalAlignment="Center" FontWeight="SemiBold"/>
                
                <TextBlock Grid.Column="2" Text="ðŸ” Ã‡ift tÄ±klayarak detaylarÄ± aÃ§abilirsiniz" 
                          HorizontalAlignment="Right" FontStyle="Italic" 
                          Foreground="#757575"/>
