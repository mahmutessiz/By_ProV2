<Window x:Class="By_ProV2.CariListesiMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cari Listesi - Ana Ekran" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Icon="/Resources/Logo.png">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- BaÅŸlÄ±k -->
        <TextBlock Grid.Row="0" Text="Cari Listesi" 
                   FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <!-- Arama ve Filtre Paneli -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <GroupBox Header="Arama ve Filtreleme" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Ä°lk SatÄ±r: Temel Aramalar -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="0,0,10,10">
                            <TextBlock Text="Cari Kodu:" Margin="0,0,0,3" FontWeight="SemiBold"/>
                            <TextBox x:Name="txtCariKodu" Margin="0,0,0,0" 
                                     ToolTip="Cari koduna gÃ¶re arama yapÄ±n"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Margin="0,0,10,10">
                            <TextBlock Text="Cari AdÄ±:" Margin="0,0,0,3" FontWeight="SemiBold"/>
                            <TextBox x:Name="txtCariAdi" Margin="0,0,0,0" 
                                     ToolTip="Cari adÄ±na gÃ¶re arama yapÄ±n"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2" Margin="0,0,10,10">
                            <TextBlock Text="Vergi No:" Margin="0,0,0,3" FontWeight="SemiBold"/>
                            <TextBox x:Name="txtVergiNo" Margin="0,0,0,0" 
                                     ToolTip="Vergi numarasÄ±na gÃ¶re arama yapÄ±n"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="3" Margin="0,0,10,10">
                            <TextBlock Text="Telefon:" Margin="0,0,0,3" FontWeight="SemiBold"/>
                            <TextBox x:Name="txtTelefon" Margin="0,0,0,0" 
                                     ToolTip="Telefon numarasÄ±na gÃ¶re arama yapÄ±n"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="4" Margin="0,0,0,10" VerticalAlignment="Bottom">
                            <Border Background="Transparent" />
                        </StackPanel>
                    </Grid>
                    
                    <!-- Ä°kinci SatÄ±r: Ekstra Filtreler -->
                    <Grid Grid.Row="1" Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Vergi Dairesi:" Margin="0,0,0,3"/>
                            <TextBox x:Name="txtVergiDairesi" 
                                     ToolTip="Vergi dairesine gÃ¶re filtreleme"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Margin="0,0,10,0">
                            <TextBlock Text="Yetkili KiÅŸi:" Margin="0,0,0,3"/>
                            <TextBox x:Name="txtYetkili" 
                                     ToolTip="Yetkili kiÅŸiye gÃ¶re filtreleme"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2" Margin="0,0,10,0">
                            <TextBlock Text="Adres:" Margin="0,0,0,3"/>
                            <TextBox x:Name="txtAdres" 
                                     ToolTip="Adrese gÃ¶re filtreleme"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="3" Margin="0,0,10,0">
                            <TextBlock Text="Plaka 1:" Margin="0,0,0,3"/>
                            <TextBox x:Name="txtPlaka1" 
                                     ToolTip="AraÃ§ plakasÄ±na gÃ¶re filtreleme"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="4" VerticalAlignment="Bottom">
                            <Border Background="Transparent" />
                        </StackPanel>
                    </Grid>
                    
                    <!-- ÃœÃ§Ã¼ncÃ¼ SatÄ±r: Butonlar -->
                    <Grid Grid.Row="2" Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                            <StackPanel Orientation="Horizontal">
                                <Button x:Name="btnTemizle" Content="ðŸ§¹ Temizle" 
                                        Margin="0,0,5,0" Padding="15,8" 
                                        Click="BtnTemizle_Click"
                                        Background="#FF9800" Foreground="White"
                                        FontWeight="SemiBold"/>
                                <Button x:Name="btnAra" Content="ðŸ” Ara" 
                                        Margin="0,0,0,0" Padding="15,8" 
                                        Click="BtnAra_Click" 
                                        Background="#4CAF50" Foreground="White"
                                        FontWeight="SemiBold"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Grid>
            </GroupBox>
        </StackPanel>

        <!-- Ana Liste -->
        <DataGrid x:Name="dataGridCariler" 
                  Grid.Row="2"
                  Margin="0,5,0,10"
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  SelectionMode="Single"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  AlternatingRowBackground="#F5F5F5"
                  MouseDoubleClick="DataGridCariler_MouseDoubleClick"
                  LoadingRow="DataGridCariler_LoadingRow">
            
            <DataGrid.Columns>
                <DataGridTextColumn Header="Cari Kodu" Binding="{Binding CariKod}" 
                                   Width="120" SortMemberPath="CariKod"/>
                <DataGridTextColumn Header="Cari AdÄ±" Binding="{Binding CariAdi}" 
                                   Width="*" SortMemberPath="CariAdi"/>
                <DataGridTextColumn Header="Vergi Dairesi" Binding="{Binding VergiDairesi}" 
                                   Width="150"/>
                <DataGridTextColumn Header="Vergi No" Binding="{Binding VergiNo}" 
                                   Width="120"/>
                <DataGridTextColumn Header="Telefon" Binding="{Binding Telefon}" 
                                   Width="120"/>
                <DataGridTextColumn Header="Yetkili" Binding="{Binding Yetkili}" 
                                   Width="150"/>
                <DataGridTextColumn Header="Adres" Binding="{Binding Adres}" 
                                   Width="200"/>
                <DataGridTextColumn Header="Plaka 1" Binding="{Binding Plaka1}" 
                                   Width="100"/>
            </DataGrid.Columns>
            
            <DataGrid.ContextMenu>
