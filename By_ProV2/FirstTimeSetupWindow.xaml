<Window x:Class="By_ProV2.FirstTimeSetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="İlk Kurulum - Admin Hesabı Oluştur" Height="550" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Icon="/Resources/Logo.png">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="İlk Kurulum" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,20,0,20"/>
        
        <TextBlock Text="Uygulamayı kullanmak için ilk admin hesabını oluşturun:" 
                   TextWrapping="Wrap" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,10"/>
        
        <Label Content="Kullanıcı Adı:" Grid.Row="2"/>
        <TextBox x:Name="txtUsername" Grid.Row="3" Height="30" Margin="0,0,0,10"/>
        
        <Label Content="Ad Soyad:" Grid.Row="4"/>
        <TextBox x:Name="txtFullName" Grid.Row="5" Height="30" Margin="0,0,0,10"/>
        
        <Label Content="E-posta:" Grid.Row="6"/>
        <TextBox x:Name="txtEmail" Grid.Row="7" Height="30" Margin="0,0,0,10"/>
        
        <Label Content="Şifre:" Grid.Row="8"/>
        <PasswordBox x:Name="txtPassword" Grid.Row="9" Height="30" Margin="0,0,0,10"/>
        
        <Label Content="Şifre (Tekrar):" Grid.Row="10"/>
        <PasswordBox x:Name="txtPasswordConfirm" Grid.Row="11" Height="30" Margin="0,0,0,20"/>
        
        <StackPanel Grid.Row="12" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="btnCreateAdmin" Content="Admin Hesabı Oluştur" Width="150" Height="35" 
                    Margin="0,0,10,0" Click="btnCreateAdmin_Click"/>
            <Button x:Name="btnCancel" Content="İptal" Width="100" Height="35" 
                    Click="btnCancel_Click"/>
        </StackPanel>
        
        <TextBlock x:Name="lblError" Grid.Row="13" Foreground="Red" 
                   HorizontalAlignment="Center" Margin="0,10,0,0" Visibility="Hidden"/>
    </Grid>
</Window>