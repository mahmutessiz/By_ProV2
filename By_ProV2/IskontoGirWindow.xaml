<Window x:Class="By_ProV2.IskontoGirWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="İskontolar" Height="250" Width="400"
        WindowStartupLocation="CenterOwner"
        Icon="/Resources/Logo.png"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="İskonto 1 (%)" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="txtIsk1" Grid.Row="0" Grid.Column="1" Margin="5"/>

        <TextBlock Text="İskonto 2 (%)" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="txtIsk2" Grid.Row="1" Grid.Column="1" Margin="5"/>

        <TextBlock Text="İskonto 3 (%)" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="txtIsk3" Grid.Row="2" Grid.Column="1" Margin="5"/>

        <TextBlock Text="İskonto 4 (%)" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="txtIsk4" Grid.Row="3" Grid.Column="1" Margin="5"/>

        <StackPanel Grid.Row="5" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Excel Oluştur" Width="100" Margin="5" Click="BtnExcel_Click"/>
            <Button Content="PDF Oluştur" Width="100" Margin="5" Click="BtnPdf_Click" />
            <Button Content="Vazgeç" Width="100" Margin="5" Click="BtnVazgec_Click"/>
        </StackPanel>
    </Grid>
</Window>