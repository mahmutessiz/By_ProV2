<Window x:Class="By_ProV2.Reports.GunlukSutSatisPreview"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Günlük Süt Satış Önizleme" Height="800" Width="1400" MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Filtre ve Butonlar -->
            <RowDefinition Height="*"/>
            <!-- Rapor -->
        </Grid.RowDefinitions>

        <!-- Filtre Paneli -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" VerticalAlignment="Center">
            <Label Content="Tarih:" VerticalAlignment="Center"/>
            <DatePicker x:Name="dpTarih" Width="150" Margin="5,0,15,0"/>
            <Button Content="Raporu Getir" Width="120" Click="btnGetir_Click" Margin="0,0,10,0"/>
            <Button Content="PDF Oluştur" Width="120" Margin="0,0,10,0" Click="btnPDF_Click"/>
            <Button Content="Yazdır" Width="120" Click="btnYazdir_Click"/>
        </StackPanel>

        <!-- Rapor Önizleme -->
        <FlowDocumentScrollViewer x:Name="docViewer" Grid.Row="1" VerticalScrollBarVisibility="Auto" IsToolBarVisible="True">
            <FlowDocument PagePadding="20" ColumnWidth="1200">
                <!-- Başlık, tarih ve tablo buraya kod ile eklenecek -->
            </FlowDocument>
        </FlowDocumentScrollViewer>
    </Grid>
</Window>