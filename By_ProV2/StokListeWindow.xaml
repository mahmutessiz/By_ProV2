    <Window x:Class="By_ProV2.StokListeWindow"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            Title="Stok Listesi" Height="500" Width="800"
            WindowStartupLocation="CenterScreen">

        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <!-- Arama kutularÄ± -->
                <ColumnDefinition Width="*"/>
                <!-- DataGrid -->
            </Grid.ColumnDefinitions>

            <!-- ðŸ” Arama Paneli (Sol) -->
            <StackPanel Grid.Column="0" VerticalAlignment="Top">
                <TextBlock Text="Stok Kodu Ara:" Margin="0,0,0,5"/>
                <TextBox x:Name="txtAraStokKod" Height="30" Margin="0,0,0,10" TextChanged="txtAraStokKod_TextChanged"/>

                <TextBlock Text="Stok AdÄ± Ara:" Margin="0,0,0,5"/>
                <TextBox x:Name="txtAraStokAdi" Height="30" Margin="0,0,0,10" TextChanged="txtAraStokAdi_TextChanged"/>
            </StackPanel>

            <!-- ðŸ“‹ DataGrid (SaÄŸ) -->
            <DataGrid x:Name="dataGridStoklar"
                      Grid.Column="1"
                      Margin="10,0,0,0"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      MouseDoubleClick="dataGridStoklar_MouseDoubleClick">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Stok Kodu" Binding="{Binding StokKodu}" Width="150"/>
                    <DataGridTextColumn Header="Stok AdÄ±" Binding="{Binding StokAdi}" Width="*"/>
                </DataGrid.Columns>

            </DataGrid>
        </Grid>
    </Window>