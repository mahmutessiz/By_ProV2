                        </StackPanel>
                        
                        <StackPanel Grid.Column="3" Margin="0,0,10,0">
                            <TextBlock Text="MenÅŸei:" Margin="0,0,0,3"/>
                            <TextBox x:Name="txtMensei" 
                                     ToolTip="MenÅŸei bilgisine gÃ¶re filtreleme"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="4" VerticalAlignment="Bottom">
