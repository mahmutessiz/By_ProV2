                <DataGridTextColumn Header="AÄŸÄ±rlÄ±k" Binding="{Binding Agirlik}" 
                                   Width="80"/>
                <DataGridTextColumn Header="Barkod" Binding="{Binding Barkod}" 
                                   Width="120"/>
